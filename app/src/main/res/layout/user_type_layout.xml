<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_centerInParent="true"
        android:background="@drawable/background_image"
        android:scaleType="centerCrop"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerInParent="true">
        <TextView
            android:id="@+id/tv_login_type_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Type of Login"
            android:textSize="20sp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:textColor="@color/textcolor333"/>
        <TextView
            android:id="@+id/tv_donor_type"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/edit_text_gray_bg"
            android:gravity="center"
            android:minHeight="50dp"
            android:text="@string/donor_type"
            android:textColor="#777777"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/tv_blood_bank_type"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/edit_text_gray_bg"
            android:gravity="center"
            android:minHeight="50dp"
            android:text="@string/blood_bank_type"
            android:textColor="#777777"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_login_type_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bt_yellow_bg"
            android:text="CONTINUE"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

    </LinearLayout>

</RelativeLayout>