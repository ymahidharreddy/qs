<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_centerInParent="true"
            android:background="@drawable/background_image"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/lock_icon" />

            <TextView
                android:id="@+id/tv_password_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:gravity="center"
                android:lineSpacingExtra="2dp"
                android:text="Please enter the password"
                android:textColor="@color/textcolor333"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/et_enter_otp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/edit_text_bg"
                android:hint="OTP"
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:inputType="text"
                android:maxLength="10"
                android:minHeight="50dp"
                android:paddingLeft="5dp"
                android:textColor="@color/textcolor333"
                android:textSize="18sp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/edit_text_bg"
                android:digits="@string/digits_password"
                android:hint="Password"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:minHeight="50dp"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:textColor="@color/textcolor333"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/td1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="4dp"
                android:textColor="#333"
                android:textSize="12sp"
                android:text="Minimum 6 Characters" />

            <EditText
                android:id="@+id/et_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/edit_text_bg"
                android:digits="@string/digits_password"
                android:hint="Confirm Password"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:minHeight="50dp"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:textColor="@color/textcolor333"
                android:textSize="18sp" />

            <Button
                android:id="@+id/bt_password_continue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/bt_yellow_bg"
                android:text="CONTINUE"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

        </LinearLayout>
    </RelativeLayout>
</ScrollView>