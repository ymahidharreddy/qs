<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_centerInParent="true"
        android:background="@drawable/background_image"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/gender_icon" />

        <TextView
            android:id="@+id/td8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:gravity="center"
            android:lineSpacingExtra="2dp"
            android:text="Please Select Your Gender"
            android:textColor="@android:color/black"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/tv_male"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/edit_text_gray_bg"
            android:gravity="center"
            android:minHeight="50dp"
            android:text="Male"
            android:textColor="#777777"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_female"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/edit_text_gray_bg"
            android:gravity="center"
            android:minHeight="50dp"
            android:text="Female"
            android:textColor="#777777"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_others"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/edit_text_gray_bg"
            android:gravity="center"
            android:minHeight="50dp"
            android:text="Others"
            android:textColor="#777777"
            android:textSize="18sp" />

        <Button
            android:id="@+id/bt_gender_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bt_ash_bg"
            android:text="CONTINUE"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

    </LinearLayout>
</RelativeLayout>
</ScrollView>